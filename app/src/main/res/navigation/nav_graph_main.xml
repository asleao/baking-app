<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/recipeFragment">

    <fragment
        android:id="@+id/recipeFragment"
        android:name="br.com.bakingapp.recipes.ui.RecipeFragment"
        android:label="Recipes"
        tools:layout="@layout/recipe_fragment" >
        <action
            android:id="@+id/action_recipeFragment_to_recipeDetailFragment"
            app:destination="@id/recipeDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/recipeDetailFragment"
        android:name="br.com.bakingapp.recipeDetail.ui.RecipeDetailFragment"
        android:label="Recipes Detail"
        tools:layout="@layout/recipe_detail_fragment" >
        <argument
            android:name="recipe"
            app:argType="br.com.bakingapp.services.recipeService.response.Recipe" />
    </fragment>
</navigation>